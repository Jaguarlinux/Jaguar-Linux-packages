# Template file for 'wineasio'
pkgname=wineasio
version=1.2.0
revision=1
archs="x86_64* i686*"
build_style=gnu-makefile
make_build_target="${DULGE_TARGET_WORDSIZE}"
hostmakedepends="pkg-config wine-tools"
makedepends="wine wine-devel rtaudio-devel jack-devel"
depends="jack"
short_desc="JACK driver for WINE to provide Windows Apps with ASIO support"
maintainer="TigerClips1 <spongebob1966@proton.me>"
license="LGPL-2.1-or-later"
homepage="https://github.com/wineasio/wineasio"
distfiles="https://github.com/wineasio/wineasio/releases/download/v${version}/wineasio-${version}.tar.gz"
checksum="13f20c7b3d45b474833e6c60cb58bcad7295e97dd39239bf00f85c02272cc0f4"

case $DULGE_TARGET_MACHINE in
	x86_64*) winearch="x86_64" ;;
	i686*) winearch="i386" ;;
	*) broken="unknown winearch" ;;
esac

lib32files="/usr/lib/wine/${winearch}-windows/wineasio${DULGE_TARGET_WORDSIZE}.dll"

do_install() {
	vinstall "build${DULGE_TARGET_WORDSIZE}/wineasio${DULGE_TARGET_WORDSIZE}.dll" 755 usr/lib/wine/${winearch}-windows
	vinstall "build${DULGE_TARGET_WORDSIZE}/wineasio${DULGE_TARGET_WORDSIZE}.dll.so" 755 usr/lib/wine/${winearch}-unix
	vbin wineasio-register
	vdoc "${FILESDIR}/README.voidlinux"
}
