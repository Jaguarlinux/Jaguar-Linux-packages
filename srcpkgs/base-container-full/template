# Template file for 'base-container-full'
pkgname=base-container-full
version=0.11
revision=3
metapackage=yes
short_desc="Jaguar Linux base system meta package for containers/chroots"
maintainer="TigerClips1 <spongebob1966@proton.me>"
license="Public Domain"
homepage="https://ps4jaguarlinux.site//"

depends="
 base-files ncurses coreutils findutils diffutils
 dash bash grep gzip file sed gawk less util-linux which tar man-pages
 mdocml>=1.13.3 shadow e2fsprogs btrfs-progs xfsprogs f2fs-tools dosfstools kbd
 procps-ng tzdata pciutils iana-etc eudev  openssh dhcpcd
 iproute2 iputils iw dulge nvi sudo traceroute kmod removed-packages"

case "$DULGE_TARGET_MACHINE" in
	*-musl) depends+=" musl";;
	*) depends+=" glibc-locales";;
esac

base-jaguarstrap_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" (transitional dummy package)"
	metapackage=yes
}
