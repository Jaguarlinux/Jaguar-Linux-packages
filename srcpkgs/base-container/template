# Template file for 'base-container'
pkgname=base-container
version=0.3
revision=3
metapackage=yes
short_desc="Jaguar Linux base system meta for minimal containers/chroots"
maintainer="TigerClips1 <spongebob1966@proton.me>"
license="Public Domain"
homepage="https://ps4jaguarlinux.site//"

depends="
 base-files coreutils findutils diffutils dash grep gzip sed gawk
 util-linux which tar shadow procps-ng iana-etc dulge nvi tzdata
 removed-packages"

case "$DULGE_TARGET_MACHINE" in
	*-musl) depends+=" musl";;
	*) depends+=" glibc-locales";;
esac

base-minimal_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" (transitional dummy package)"
	metapackage=yes
}
